DARK_GREY = #252525
LIGHT_CREAM = #a59274

use_font()
  font-family: Merriweather
  letter-spacing: 1px

html, body
  padding: 0
  margin: 0
  use_font()

.brand
  display: inline-block
  font-size: 16px
  color: white
  margin: 10px

.nav
  background-color: DARK_GREY
  list-style: none
  margin: 0
  overflow: hidden
  font-size: 16px
  position: fixed
  top: 0
  width: 100%

  ul
    float: right
    display: inline-block
    margin: 10px

    li
      display: inline

    a
      color: #eee
      text-decoration: none
      padding: 0 10px

      &:hover, .active
        color: white

.nav-clear
  height: 40px

#feature
  color: white
  background-color: #333
  margin: 0px
  height: 600px
  background: url("images/pierreleroux.jpg")
  background-size: cover

  .bottom-line
    position: relative
    top: 580px
    background-color: white
    height: 2px

  .right-side-box
    float: right
    text-align: center
    margin-right: 200px
    margin-top: 120px
    
    h1
      font-size: 50px
      margin: 0

    hr
      width: 70%

    .text
      width: 300px

button
  background-color: rgba(0,0,0,0.4)
  color: white
  padding: 10px 28px
  font-size: 16px
  border: 1px solid white

  &:hover
    background-color: white
    color: black


.block
  padding: 40px
  text-align: center
  background-repeat: no-repeat

  hr
    width: 160px

  table
    font-weight: bold
    text-align: left
    margin: 0 auto
    padding: 2px
    td
      padding: 4px

.light-division
  background-color: LIGHT_CREAM
  color: DARK_GREY
  background-image: url('images/lines1.png')
  background-position: top right
  h1
    color: white
    margin: 0


.dark-division
  background-color: DARK_GREY
  background-image: url('images/lines2.png')
  background-position: top left
  color: LIGHT_CREAM
  h1
    margin: 0
  hr
    border-color: LIGHT_CREAM
  table
    a
      color: LIGHT_CREAM

.paragraph
  p
    margin: 0 auto
    width: 600px
  
.line
  transform-origin: 0 100%
  height: 3px
  background: white
